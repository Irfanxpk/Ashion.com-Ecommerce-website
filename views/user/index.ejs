    <section class="product spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-4">
            <div class="section-title">
              <h4>Shop products</h4>
            </div>
          </div>
          <div class="col-lg-8 col-md-8">
            <ul class="filter__controls">
              <li class="active" data-filter="*" > <a href="/shop">All </a></li>
              <!-- You can generate these filter items dynamically if needed -->
            </ul>
          </div>
        </div>
        
        <div class="row property__gallery" id="product-gallery">
          <% products.forEach(product => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mix">
            <div class="product__item">
              <div class="product__item__pic set-bg" data-setbg="uploads/product_resized/<%= product.images[0] %>">
              
                <% if (product.offers && product.offers.length> 0) { %>
                  <div class="label sale"> <%= product.offers[0].discount %>% off</div>
                  <% } %>
                
                <ul class="product__hover">
                  <li>
                    <a href="uploads/product_resized/<%= product.images[0] %>" class="image-popup"
                      ><span class="arrow_expand"></span
                    ></a>
                  </li>
                  <li>
                    <a href="#"><span class="icon_heart_alt"></span></a>
                  </li>
                  <li>
                    <a href="/product/<%= product._id %>"><span class="icon_bag_alt"></span></a>
                  </li>
                </ul>
              </div>
              <div class="product__item__text">
                <h6><a href="#"><%= product.name %></a></h6>
                <!-- Include other product details here -->
                <div class="rating">
                  <!-- You can generate a star rating based on product ratings -->
                  <!-- <% for (let i = 0; i < product.rating; i++) { %>
                    <i class="fa fa-star"></i>
                  <% } %> -->
                </div>

                <!-- <% if (product.offers && product.offers.length> 0) { %>
                  <div class="product__price">$ <%= product.price - (product.price * (product.offers[0].discount / 100)) %>
                      <span>$ <%= product.price %></span>
                  </div>
                  <% } else { %>
                    <div class="product__price">$ <%= product.price %>
                    </div>
                    <% } %> -->

                    <% if (product.productOffer && product.categoryOffer) { %>
                      <% if (product.productOffer.discount> 0 || product.categoryOffer.discount > 0) { %>
                        <% if (product.productOffer.discount> product.categoryOffer.discount) { %>
                          <div class="product__price">$ <%= product.price - (product.price * (product.productOffer.discount / 100)) %>
                              <span>$ <%= product.price %></span>
                          </div>
                          <% } else { %>
                            <div class="product__price">$ <%= product.price - (product.price * (product.categoryOffer.discount / 100)) %>
                                <span>$ <%= product.price %></span>
                            </div>
                            <% } %>
                              <% } else { %>
                                <div class="product__price">$ <%= product.price %>
                                </div>
                                <% } %>
                                  <% } else if (product.productOffer && product.productOffer.discount> 0) { %>
                                    <div class="product__price">$ <%= product.price - (product.price * (product.productOffer.discount /
                                        100)) %>
                                        <span>$ <%= product.price %></span>
                                    </div>
                                    <% } else if (product.categoryOffer && product.categoryOffer.discount> 0) { %>
                                      <div class="product__price">$ <%= product.price - (product.price * (product.categoryOffer.discount /
                                          100)) %>
                                          <span>$ <%= product.price %></span>
                                      </div>
                                      <% } else { %>
                                        <div class="product__price">$ <%= product.price %>
                                        </div>
                                        <% } %>



              
              
              </div>

            </div>
          </div>
          <% }); %>
        </div>
        <div class="shop-more">
             <a href="/shop">Shop More <span class="arrow">&rarr;</span></a>
         </div>
      </div>
    </section>
    


