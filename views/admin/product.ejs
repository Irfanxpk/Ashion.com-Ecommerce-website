                                            <a class="btn btn-sm btn-danger" href="/admin/delete-product/<%= product._id %>">Delete</a>
                                            <% if (product.status == 'active') { %>
                                                <a class="btn btn-sm btn-warning" href="/admin/listProduct/<%= product._id %>">Unlist</a>
                                            <% } else { %>
                                                <a class="btn btn-sm btn-success" href="/admin/unlistproduct/<%= product._id %>">List</a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
