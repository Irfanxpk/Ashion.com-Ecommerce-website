                                </tr>
                            </thead>
                            <tbody>
                                <% product.forEach(product => { %>
                                    <tr>
                                        <td><%= product.name %></td>
                                        <!-- <td><%= product.description %></td> -->
                                        <td>$<%= product.price %></td>
                                        
                                     <td><%= product.stock %></td>
                                        
                                        <td>
                                            <a class="btn btn-sm btn-primary" href="/admin/edit-product/<%= product._id %>">Edit</a>
                                            <a class="btn btn-sm btn-danger" href="/admin/delete-product/<%= product._id %>">Delete</a>
                                            <% if (product.status == 'active') { %>
                                                <a class="btn btn-sm btn-warning" href="/admin/listProduct/<%= product._id %>">Unlist</a>
                                            <% } else { %>
                                                <a class="btn btn-sm btn-success" href="/admin/unlistproduct/<%= product._id %>">List</a>
                                            <% } %>

                                            <a class="btn btn-sm btn-info" onclick="poffers('<%= product._id %>')">Offer</a>

                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
