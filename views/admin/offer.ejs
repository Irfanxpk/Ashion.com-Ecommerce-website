    <form action="/admin/productoffers/<%= product._id %>" method="post">
        <!-- Discount Field -->
        <div class="mb-4">
            <label class="form-label">Discount</label>
            <select class="form-select" name="discount">
                <% for (let i=0; i <=75; i +=5) { %>
                    <% if (product.productOffer && product.productOffer.discount===i) { %>
                        <option value="<%= i %>" selected>
                            <%= i %>%
                        </option>
                        <% } else { %>
                            <option value="<%= i %>">
                                <%= i %>%
                            </option>
                            <% } %>
                                <% } %>
            </select>
        </div>
        <!-- Add other fields here -->
        <div id="dateTimePickers"  class="mb-3">
            <div id="datetimepicker1" class="input-append date">
                <label for="validFrom">Valid From:</label>
                <input id="validFrom" data-format="dd/MM/yyyy hh:mm:ss" type="date" name="validFrom" value="<%= product.productOffer.validFrom %>" ></input>
                <span class="add-on">
                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                </span> &nbsp;&nbsp;
        
                <label for="validUntil">Valid Until:</label>
                <input id="validUntil" data-format="dd/MM/yyyy hh:mm:ss" type="date" name="validUntil" value="<%= product.productOffer.validUntil %>"></input>
                <span class="add-on">
                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                </span>
            </div>
        </div>



      



        <!-- Add other offer fields here -->

        <button type="submit" class="btn btn-primary">Edit</button>
        <div class="text-center">
            <% if (typeof message !=='undefined' ) { %>
                <span id="er2" style="color: rgb(241, 7, 7); text-align: center">
                    <%= message %>
                </span>
                <% } %>
        </div>
    </form>
